@using Fiap.Exemplo02.MVC.Web.Models
@model Aluno

@{
    ViewBag.Title = "Alterar";
}

<h2>Editar Aluno</h2>

@if (ViewBag.msg != null)
{
    <div class="alert alert-success">
        @ViewBag.msg
    </div>
}

@using (@Html.BeginForm())
{
    <!-- Já vai vir com os valores do model  -->

    @Html.HiddenFor(a => a.Id);

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.Nome)
                @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.DataNascimento)
                @Html.TextBoxFor(a => a.DataNascimento, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div>
        @Html.LabelFor(a => a.Grupo)
        <!-- Primeira propriedade é onde ele vai setar o valor escolhido-->
        @Html.DropDownListFor(a => a.GrupoId, ViewBag.grupos as SelectList, "Selecione", new { @class = "form-control" })
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.CheckBoxFor(a => a.Bolsa) <!--qualquer atributo do html, (arroba) é escape-->
                @Html.LabelFor(a => a.Bolsa)
            </div>
        </div>
    </div>
    <div class="row desconto">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(a => a.Desconto)
                @Html.TextBoxFor(a => a.Desconto, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>

    <input type="submit" value="Enviar" class="btn btn-primary" />
}



