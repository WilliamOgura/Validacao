@using Fiap.Exemplo02.MVC.Web.Models
@model Grupo

@{
    ViewBag.Title = "Editar";
}

<h1>Editar</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (@Html.BeginForm())
{
    <h2>Grupo</h2>


    @Html.HiddenFor(g => g.Id)
    @Html.HiddenFor(g => g.Projeto.Id)

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Nome)
                @Html.TextBoxFor(g => g.Nome, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Nota)
                @Html.TextBoxFor(g => g.Nota, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>

    <h2>Projeto</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.Nome)
                @Html.TextBoxFor(g => g.Projeto.Nome, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.Descricao)
                @Html.TextBoxFor(g => g.Projeto.Descricao, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.DataInicio)
                @Html.TextBoxFor(g => g.Projeto.DataInicio, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(g => g.Projeto.DataTermino)
                @Html.TextBoxFor(g => g.Projeto.DataTermino, new { @class = "form-control" }) <!--qualquer atributo do html, (arroba) é escape-->
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.CheckBoxFor(g => g.Projeto.Entregue) <!--qualquer atributo do html, (arroba) é escape-->
                @Html.LabelFor(g => g.Projeto.Entregue)
            </div>
        </div>
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-success"/>
}
